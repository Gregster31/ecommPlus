{{> Header }}

<h1>All Customers</h1>

{{#unless customers}}
    <p>No customers found.</p>
{{else}}
    <ol>
        {{#each customers}}
            <li customer-id="{{this.id}}">
                <div>
                    <strong>Name:</strong> {{this.firstName}} {{this.lastName}}
                </div>
                <div>
                    <strong>Email:</strong> {{this.email}}
                </div>
                <div>
                    <strong>Username:</strong> {{this.userName}}
                </div>
                <div>
                    <strong>Phone Number:</strong> {{this.phoneNumber}}
                </div>
                <div>
                    <strong>Date of Birth:</strong> {{this.dateOfBirth}}
                </div>
                <div>
                    <strong>Admin:</strong> {{#if this.isAdmin}}Yes{{else}}No{{/if}}
                </div>
                <form method="POST" action="/customers/{{this.id}}" id="delete-customer-form">
                    <input type="hidden" name="method" value="DELETE">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this customer?');">Delete Customer</button>
                </form>
            </li>
        {{/each}}
    </ol>
{{/unless}}

{{> Footer }}
