{{> Header }}

<h1>Create Order</h1>

<form method="POST" action="/orders" id="new-order-form">
    {{!-- <div>
        <label for="order_date">Order Date:</label>
        <input type="datetime-local" id="order_date" name="order_date">
    </div> --}}

    <div>
        <label for="total_price">Total Price:</label>
        <input type="number" id="total_price" name="total_price" step="0.01">
    </div>

    <div>
        <label for="status">Status:</label>
        <select id="status" name="status">
            <option value="incomplete">Incomplete</option>
            <option value="complete">Complete</option>
        </select>
    </div>

    <div>
        <label for="completed_at">Completed At:</label>
        <input type="datetime-local" id="completed_at" name="completed_at">
    </div>

    <div>
        <label for="customer_id">Customer ID:</label>
        <input type="number" id="customer_id" name="customer_id">
    </div>

    <div>
        <label for="address_id">Address ID:</label>
        <input type="number" id="address_id" name="address_id">
    </div>

    <button type="submit" id="new-order-form-submit-button">Create</button>
</form>

{{> Footer }}
