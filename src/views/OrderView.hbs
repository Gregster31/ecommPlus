{{> Header }}

<div>
    <h1>Order Details</h1>
    <div>
        <p><strong>Order ID:</strong> {{order.id}}</p>
        <p><strong>Order Date:</strong> {{order.orderDate}}</p>
        <p><strong>Total Price:</strong> ${{order.totalPrice}}</p>
        <p><strong>Status:</strong> {{order.status}}</p>
        {{#if order.completed_at}}
            <p><strong>Completed At:</strong> {{order.completedAt}}</p>
        {{/if}}
        <p><strong>Customer ID:</strong> {{order.customerId}}</p>
        <p><strong>Address ID:</strong> {{order.addressId}}</p>
    </div>

    <form method="POST" action="/orders/{{ order.id }}/complete" id="complete-order-form">
    <input type="hidden" name="method" value="PUT">
    <button>Mark Complete</button>
</form>
    
    <form method="POST" action="/orders/{{order.id}}" id="delete-order-form">
        <input type="hidden" name="method" value="DELETE">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this order?');">Delete Order</button>
    </form>
</div>

{{> Footer }}
