{{> Header }}

<div class="show-products">
    <h3>{{ name }}</h3>
    
    <div class="grid-container">
        {{#each products}}
            <div class="grid-item">
                <a href="{{ path 'products' }}/{{ this.props.id }}"><img src="{{ this.props.url }}" alt="Product Image"></a>
                <div class="text">{{this.props.title}}</div>
                <div class="price">${{this.props.price}}</div>
                <form method="POST" action="/products/{{this.props.id}}" id="delete-product-form">
                    <input type="hidden" name="method" value="DELETE">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this product?');">Delete Product</button>
                </form>
            </div>
        {{/each}}
    </div>
</div>

{{> Footer }}
