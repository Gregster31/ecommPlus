{{> Header }}

<div class="container">
    <div class="image-div">
        <img src="{{ product.props.url }}" alt="Product Image">
    </div>
    <div class="info-div">
        <div class="top-right">
            <h2>{{product.props.title}}</h2>
        </div>
        <div class="middle-right">
            <h5>${{product.props.price}}</h5>
        </div>
        <div class="bottom-right">
            <p >{{product.props.description}}</p>
        </div>
        <button>Add to Cart</button>
    </div>
</div>

{{> Footer }}
