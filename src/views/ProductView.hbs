{{> Header }}

<div class="container">
    <div class="image-div">
        <img src="{{ product.url }}" alt="Product Image">
    </div>
    <div class="info-div">
        <div class="top-right">
            <h2>{{product.title}}</h2>
        </div>
        <div class="middle-right">
            <h5>${{product.price}}</h5>
        </div>
        <div class="bottom-right">
            <p>{{product.description}}</p>
        </div>
        <form method="POST" action="/products/{{product.id}}" id="delete-product-form">
            <input type="hidden" name="method" value="DELETE">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this product?');">Delete Product</button>
        </form>

        <form action="{{ path 'cart/items' }}" method="POST">
            <input type="hidden" name="product_id" value="{{product.id}}">
            <input type="hidden" name="unit_price" value="{{product.price}}">
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" value="1" min="1" required>
            <button type="submit">Add to Cart</button>
        </form>
    </div>
</div>

{{> Footer }}
